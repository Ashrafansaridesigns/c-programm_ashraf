#include <math.h>
#include <stdio.h>

int main() {
    int n;
    printf("enter the number = ");
    scanf("%d",&n);
    if(n>0){
    int a=1;
for(int i=n;i>=1;i--){
  a=a*i;  
}
 printf("the factorial of number is = %d ",a);
    }
    else if(n==0){
    printf("the factorial of number is = 1"); 
    }
else if(n<0)
{
    n = n*(-1);
    int a=1;
    for(int i=n;i>=1;i--){
  a=a*i;  
}
     printf("the factorial of number is = %d",a);
}
    return 0;
}
